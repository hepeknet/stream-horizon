<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>small</id>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>src/main/resources/scripts/</directory>
			<outputDirectory>bin</outputDirectory>
			<fileMode>777</fileMode>
			<lineEnding>unix</lineEnding>
			<includes>
				<include>start.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/scripts/</directory>
			<outputDirectory>bin</outputDirectory>
			<fileMode>777</fileMode>
			<lineEnding>windows</lineEnding>
			<includes>
				<include>start.bat</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/</directory>
			<outputDirectory>extras</outputDirectory>
			<includes>
				<include>CLASSPATH_INFO.TXT</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>README.TXT</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/config/</directory>
			<outputDirectory>log</outputDirectory>
			<includes>
				<include>README.TXT</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/config/</directory>
			<outputDirectory>config</outputDirectory>
			<fileMode>666</fileMode>
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/customisations/</directory>
			<outputDirectory>customisations</outputDirectory>
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>bauk_small.jar</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<fileMode>666</fileMode>
			<includes>
				<include>*:jar:*</include>
			</includes>
			<excludes>
				<exclude>com.threeglav.bauk:bauk-core</exclude>
				<exclude>com.threeglav.bauk:feed-parser</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>